<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="my-4 mx-4">
            <h3>Create New Contact</h3>
            <form action="/contacts" class="form-inline was-validated" method="POST" id="my-form">
                <div class="form-group mr-3">
                    <input type="text" name="name" placeholder="Name" class="from-control">
                </div>
                <div class="form-group mr-3">
                    <input type="email" name="email" placeholder="Email" class="from-control">
                </div>
                <div class="form-group mr-3">
                    <input type="number" name="phone" placeholder="Phone" class="from-control">
                </div>
                <div class="form-group mr-3">
                    <input type="hidden" name="id" class="from-control">
                </div>
                <div class="form-group mr-3">
                    <input type="submit" value="Submit" class="from-control">
                </div>
            </form>
        </div>
        <!--<div class="my-3">
            <ul>
                <% /* %>
                <% if(errors.length > 0 ) {%>

                    <% errors.forEach(eror =>{ %>
                        <li style="color: red;">
                            <%= eror.msg %>
                        </li>
                        <% }) %>

                            <%  } %>
                            <% */ %>
            </ul>
        </div>-->
        <div class="my-3">
            <h3 class="text-center ">Contacts</h3>
            <table class="table">
                <thead>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </thead>
                <tbody>

                    <% for(let c of Object.keys(cont)){ %>
                        <tr>
                            <td>
                                <%= c.name %>
                            </td>
                            <td>
                                <%= c.email %>
                            </td>
                            <td>
                                <%= c.phone %>
                            </td>
                            <td>
                                <button class="btn btn-warning edit" data-name="<%= c.name %>" data-email="<%= c.email %>" data-phone="<%= c.phone %>" data-id="<%= c._id %>">Edit</button>

                            </td>
                            <td>
                                <button class="btn btn-warning">
                                    <a style="color: black; text-decoration: none;" href="/contacts/delete/<%= c._id %> ">Delete</a>
                                </button>
                            </td>
                        </tr>

                        <% } %>
                </tbody>
            </table>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
        window.onload = function() {
            const edit_btn = document.getElementsByClassName('edit')
            const form_id = document.getElementById('my-form')


            ;
            [...edit_btn].forEach(btn => {
                btn.addEventListener('click', (e) => {
                    console.log(e.target.dataset)
                    let {
                        name,
                        email,
                        phone,
                        id
                    } = e.target.dataset
                    form_id[0].value = name
                    form_id[1].value = email
                    form_id[2].value = phone
                    form_id[3].value = id
                    form_id[4].value = 'Update'
                })
            })
        }
    </script>

</body>

</html>